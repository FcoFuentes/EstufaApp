<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment"
    android:background="@color/whiteTextColor"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/primero"
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:background="@color/whiteTextColor"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="336dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"

                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/fire_na1me"
                    android:layout_width="320dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Este dispositivo fue desarrollado por IngenierÃ­a y Soluciones Ambietales, PYME que esta en constante desarrollo de equipos para dar soluciones a las problematicas emisiones de material particulado al ambiente."
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/locate_n1ame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="www.insolamb.cl"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seguwndo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/primero"
                android:layout_marginTop="60dp"
                android:background="@color/whiteTextColor"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageVieww21"
                    android:layout_width="400dp"
                    android:layout_height="134dp"
                    android:layout_gravity="center_horizontal"

                    android:src="@drawable/apoyo" />

                <TextView
                    android:id="@+id/fire_name"
                    android:layout_width="320dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="1sp"
                    android:textStyle="bold"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/fire_name1"
                    android:layout_width="320dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="1sp"
                    android:textStyle="bold"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/fire_name2"
                    android:layout_width="320dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="1sp"
                    android:textStyle="bold"
                    android:visibility="invisible"/>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</LinearLayout>
